<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ÜST DALGA ARKA PLAN -->
        <View
            android:id="@+id/bgWave"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@drawable/bg_login_wave" />

        <!-- ÜST BAŞLIK -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:layout_marginTop="-200dp">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_back"
                android:tint="#2E7D32"/>

            <TextView
                android:layout_marginStart="10dp"
                android:text="Tekerek"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#2E7D32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

        </LinearLayout>


        <!-- KULLANICI ONAY KARTI -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:padding="18dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            android:backgroundTint="#FAFAFA">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_app_logo_circle"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginStart="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Ali Yılmaz"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#2E7D32"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="Adres: Tekerek"
                            android:textSize="15sp"
                            android:textColor="#558B2F"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="İkamet Belgesi:"
                            android:textSize="15sp"
                            android:textColor="#558B2F"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Onay / Red -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnApprove"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Onayla"
                        android:textAllCaps="false"
                        android:backgroundTint="#66BB6A"
                        android:textColor="@android:color/white"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnReject"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Red"
                        android:textAllCaps="false"
                        app:strokeColor="#BDBDBD"
                        app:strokeWidth="1.5dp"
                        android:textColor="#333333"/>
                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


        <!-- DUYURU PAYLAŞ KARTI -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="18dp"
            android:padding="18dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            android:backgroundTint="#FAFAFA">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Duyuru Paylaş"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnHelp"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_columnWeight="1"
                        android:text="Yardımlaşma"
                        android:textAllCaps="false"
                        android:backgroundTint="#8E44AD"
                        android:textColor="@android:color/white"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEvent"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_columnWeight="1"
                        android:text="Etkinlik"
                        android:textAllCaps="false"
                        android:backgroundTint="#3498DB"
                        android:textColor="@android:color/white"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSkill"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_columnWeight="1"
                        android:text="Beceri"
                        android:textAllCaps="false"
                        android:backgroundTint="#F4D03F"
                        android:textColor="#000000"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAnnouncement"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_columnWeight="1"
                        android:text="Duyuru"
                        android:textAllCaps="false"
                        android:backgroundTint="#E74C3C"
                        android:textColor="@android:color/white"/>

                </GridLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
