<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:fitsSystemWindows="true">

    <!-- Üst Dalga Arka Plan -->
    <View
        android:id="@+id/bgWave"
        android:layout_width="0dp"
        android:layout_height="240dp"
        android:background="@drawable/bg_login_wave"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Logo -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_app_logo_circle"
        android:padding="10dp"
        android:backgroundTint="#E8F5E9"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Başlık -->
    <TextView
        android:id="@+id/tvForgotTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Şifre Sıfırlama"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#2E7D32"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/ivLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Alt başlık -->
    <TextView
        android:id="@+id/tvForgotSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="E-postanızı girin, size sıfırlama bağlantısı gönderelim."
        android:textSize="14sp"
        android:textAlignment="center"
        android:textColor="#558B2F"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvForgotTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Kart -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardReset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FAFAFA"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/tvForgotSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!-- E-Mail input (ID DEĞİŞTİRİLMEDİ) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilEmail"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="E-posta adresi"
                app:startIconDrawable="@drawable/ic_email"
                app:boxStrokeColor="#66BB6A"
                app:hintTextColor="@color/hint_color"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Reset Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSendReset"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:text="Sıfırlama Maili Gönder"
                android:textAllCaps="false"
                android:backgroundTint="#66BB6A"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@id/tilEmail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Back Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBackToLogin"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="14dp"
                android:text="Geri Dön"
                android:textAllCaps="false"
                android:textColor="#2E7D32"
                app:strokeColor="#66BB6A"
                app:strokeWidth="1.5dp"
                app:layout_constraintTop_toBottomOf="@id/btnSendReset"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
